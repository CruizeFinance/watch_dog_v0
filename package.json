{
  "name": "watch_dog_v0",
  "version": "1.0.0",
  "description": "This is the first version of the cruize protection contract. ",
  "main": "hardhat.config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "hardhat compile",
    "fork_node":"hardhat node --fork https://arb1.arbitrum.io/rpc --no-deploy --fork-ignore-unknown-tx-type true",
    "test_mainnet": "hardhat test --logs ./test/src/1_aave-integration-v2.spec.ts ./test/src/2_asset-pool.spec.ts",
    "test_arbi": "hardhat test --config ./hardhat_arbi.config.ts ./test/src/3_aave-integration-v3.spec.ts --network localhost",
    "test":"killall -9 node && yarn fork_node & sleep 30 && yarn test_arbi && yarn test_mainnet",
    "clean": "hardhat clean",
    "build:watch": "hardhat watch compilation",
    "test:watch": "hardhat watch test",
    "deploy:network": "hardhat deploy --network",
    "help":"hardhat node --help"
  },
  "author": "Prithviraj Murthy",
